{% extends "::panel.html.twig" %}

{% block mainbox %}
        <h1>Lista pojazdów</h1>

            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th class="col-md-1">Id</th>
                        <th class="col-md-2">Typ</th>
                        <th class="col-md-2">Marka</th>
                        <th class="col-md-2">Model</th>
                        <th class="col-md-3">Nr VIN</th>
                        <th class="col-md-2">Nr rejestracyjny</th>
                        <th class="col-md-3">Właściciel</th>
                        <th class="col-md-2">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                {% for vehicle in vehicles %}
                    <tr>
                        <td><a href="{{ path('vehicle_show', { 'id': vehicle.id }) }}">{{ vehicle.id }}</a></td>
                        <td>{{ vehicle.type }}</td>
                        <td>{{ vehicle.make }}</td>
                        <td>{{ vehicle.model }}</td>
                        <td>{{ vehicle.vIN }}</td>
                        <td>{{ vehicle.plateNo }}</td>
                        <td><a href="{{ path('person_show', {'id': vehicle.owner.id }) }}'">{{ vehicle.owner }}</a></td>
                        <td>
                            <a href="{{ path('vehicle_show', { 'id': vehicle.id }) }}" class="glyphicon glyphicon-info-sign"> POKAŻ </a>
                            <a href="{{ path('vehicle_edit', { 'id': vehicle.id }) }}" class="glyphicon glyphicon glyphicon-edit"> EDYTUJ</a>
                            <a href="{{ path('vehicle_new_order', { 'id': vehicle.id }) }}" class="btn btn-info"><span class="glyphicon glyphicon glyphicon-plus"></span> Dodaj zlecenie</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

                    <a href="{{ path('vehicle_new') }}" class="btn btn-success btn-lg"><span class="glyphicon glyphicon glyphicon-plus"></span>Dodaj pojazd</a>

{% endblock %}