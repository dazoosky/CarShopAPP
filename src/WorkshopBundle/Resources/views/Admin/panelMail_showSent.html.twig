{% extends '::panel.html.twig' %}

{%  block mainbox %}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="row">
            <table class="table">
                <tr>
                    <th>Od:</th>
                    <td> {{ mail.sender }}</td>
                </tr>
                <tr>
                    <th>Do:</th>
                    <td> {{ mail.receiver }} </td>
                </tr>
                <tr>
                    <th>Data wysłania:</th>
                    <td>{{ mail.sendDate|date('Y-m-d H:i') }}</td>
                </tr>

            </table>
        </div>
        <div class="row">
            <body style="margin: 0; padding: 0;">
            <table border="1" cellpadding="0" cellspacing="0" width="100%">
                <table align="center" border="1" cellpadding="0" cellspacing="0" width="600">
                    <tr>
                        <td bgcolor="#70bbd9" height="50px">
                            CarShopApp
                        </td>
                    </tr>
                    <tr>
                        <td bgcolor="#ffffff" height="250px">
                            {{ mail.text }}
                        </td>
                    </tr>
                    <tr>
                        <td bgcolor="#ee4c50" height="50px">
                            Pozdrawiamy, zespół CarShop
                        </td>
                    </tr>
                </table>
            </table>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
{% endblock %}