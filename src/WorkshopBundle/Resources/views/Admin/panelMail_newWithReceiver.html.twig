{% extends '::panel.html.twig' %}

{% block mainbox %}
    <div class="col-md-8 col-md-offset-2">
        <div class="row">
            <h2>Stwórz email</h2>
            {{ form_start(form) }}
            <div class="form-group">
                <label>Nadawca</label>
                {#<input type="text" value="xxx" name="sender" class="form-control" disabled>#}
                {{ form_widget(form.sender, {'attr': {'class': 'form-control', 'disabled': true}}) }}
            </div>
            <div class="form-group">
                <label>Odbiorca</label>
                {#<input type="email" name="receiver" class="form-control">#}
                {{ form_widget(form.receiver, {'attr': {'class': 'form-control', 'disabled': true}}) }}
            </div>
            <div class="form-group">
                <label>Treść</label>
                {#<textarea class="form-control" name="text"></textarea>#}
                {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <input type="submit" value="Wyślij" class="btn btn-success btn-lg pull-right">
            </div>
            {{ form_end(form) }}
        </div>
        <div class="row">
            <a href="{{ path('mail_index') }}" class="btn btn-warning btn-lg">Anuluj</a>
        </div>
    </div>

{% endblock %}
