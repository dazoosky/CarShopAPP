{% extends "::panel.html.twig" %}

{% block mainbox %}
    <h2>Wyszukaj osobe po nazwisku:</h2>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
                <form method="POST" action="{{ path("adminPanel_customers_findBySurname") }}">
                    <label>Nazwisko:</label>
                    <input type="text" maxlength="100" name="surname" required class="text-center"/>
                    <input type="submit" value="Szukaj" class="btn btn-success pull-right"/>
                 </form>
            </div>
    </div>
{% endblock %}
