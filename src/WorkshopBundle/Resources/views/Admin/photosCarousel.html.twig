<div id="myCarousel" class="carousel slide photobox" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        {% set class = ' class="active"' %}
        {% set counter = 1 %}
        {% for photo in photos %}
            <li data-target="#myCarousel" data-slide-to="{{ counter }}"{{ class }}></li>
            {% set class = '' %}
        {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner photobox">
        {% set class = "item active" %}
        {% set counter = 1 %}
        {% for photo in photos %}
            <div class=" {{ class }}">
                <img src="{{ asset('uploads/photos/' ~ photo.name) }}" alt="{{ photo.name }}" src="{{ path('photo_show', {'id': photo.id }) }}">
            </div>
            {% set class = "item" %}
            {% set counter = counter+1 %}
        {% endfor %}

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>