{% extends '::panel.html.twig' %}

{% block mainbox %}
    <h1>Wszystkie zlecenia</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Starttime</th>
            <th>Endtime</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for workOrder in workOrders %}
            <tr>
                <td><a href="{{ path('workorder_show', { 'id': workOrder.id }) }}">{{ workOrder.id }}</a></td>
                <td>{% if workOrder.startTime %}{{ workOrder.startTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if workOrder.endTime %}{{ workOrder.endTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ workOrder.status }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('workorder_show', { 'id': workOrder.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('workorder_edit', { 'id': workOrder.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('workorder_new') }}">Create a new workOrder</a>
        </li>
    </ul>
{% endblock %}
