{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">

    <div class="row">
        <div class="col-md-4 col-md-offset-4 well">
            <div class="col-md-2 col-md-offset-1">
                <h1>Person</h1>

                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ person.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ person.name }}</td>
                        </tr>
                        <tr>
                            <th>Surname</th>
                            <td>{{ person.surname }}</td>
                        </tr>
                        <tr>
                            <th>Street</th>
                            <td>{{ person.street }}</td>
                        </tr>
                        <tr>
                            <th>Localno</th>
                            <td>{{ person.localno }}</td>
                        </tr>
                        <tr>
                            <th>Postcode</th>
                            <td>{{ person.postcode }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ person.city }}</td>
                        </tr>
                        <tr>
                            <th>Phoneno</th>
                            <td>{{ person.phoneno }}</td>
                        </tr>
                        <tr>
                            <th>Nip</th>
                            <td>{{ person.nip }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('person_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('person_edit', { 'id': person.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
