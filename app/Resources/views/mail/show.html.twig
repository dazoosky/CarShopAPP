{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mail</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mail.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ mail.text }}</td>
            </tr>
            <tr>
                <th>Sender</th>
                <td>{{ mail.sender }}</td>
            </tr>
            <tr>
                <th>Reciever</th>
                <td>{{ mail.reciever }}</td>
            </tr>
            <tr>
                <th>Senddate</th>
                <td>{% if mail.sendDate %}{{ mail.sendDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mail_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mail_edit', { 'id': mail.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
